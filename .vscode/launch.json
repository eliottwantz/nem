    "version": "0.2.0",

    "configurations": [
        {
            "name": "Debug Client",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}/web/src"
        },
        {
            "name": "Debug Server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "envFile": "${workspaceFolder}/.env"
        }
    ],
    "compounds": [
        {
            "name": "Client + Browser",
            "configurations": ["Debug Server", "Debug Client"]
        }
    ]
}
